<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="Controller.playerWindow" fx:id="addPlayerScene" alignment="CENTER" maxHeight="-Infinity"
      maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <TextField fx:id="playerNamer"/>
        <Button fx:id="addPlayer" mnemonicParsing="false" onMouseClicked="#addPlayers" text="Add Player"/>
        <HBox fx:id="deckOptions" alignment="CENTER" prefHeight="28.0" prefWidth="600.0">
            <children>
                <ChoiceBox fx:id="deckOne" prefWidth="150.0"/>
                <ChoiceBox fx:id="deckTwo" prefWidth="150.0"/>
            </children>
        </HBox>
        <Button fx:id="startButton" mnemonicParsing="false" text="Start Game" onMouseClicked="#checkForContinue"/>
        <Button fx:id="exitbutton" mnemonicParsing="false" text="Exit" onMouseClicked="#exitConfirm"/>
    </children>
</VBox>
